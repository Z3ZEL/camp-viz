{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        //RUN MAIN PYTHON IN SRC DIRECTORY
        {
            "label": "Run In Local",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "-d",
                "web"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run App With Database",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "--method",
                "database",
                "-d",
                "web"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //UPDATE DATABASE WITH GPX ASK GPX PATH
        {
            "label": "Update Database With GPX",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "--method",
                "${input:save-method}",
                "-u",
                "${input:GPX-Path}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }

        },
        //UPDATE REQUIREMENTS
        {
            "label": "Update Requirements",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-r",
                "${workspaceFolder}/requirements.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //RUN MAIN PYTHON IN DEV MODE
        {
            "label": "Run Main Python in Dev Mode",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "-d",
                "web",
                "-v"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "inputs": [
        {
            "id": "GPX-Path",
            "type": "promptString",
            "description": "GPX Path",
        },
        {
            "id": "save-method",
            "type": "pickString",
            "description": "Save Method",
            "options": [
                "database",
                "local"
            ]
        }
    ]
}