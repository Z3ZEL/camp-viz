{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        //RUN MAIN PYTHON IN SRC DIRECTORY
        {
            "label": "Run App In Local",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run App With Database",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "--method",
                "database"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //UPDATE REQUIREMENTS
        {
            "label": "Update Requirements",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-r",
                "${workspaceFolder}/requirements.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //RUN MAIN PYTHON IN DEV MODE
        {
            "label": "Run Main Python in Dev Mode",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/main.py",
                "-v"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}